<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.center {
		  text-align: center;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel">
		<g:Image width="100%" ui:field="image" />
		<g:HorizontalPanel width="100%">
			<g:Hyperlink width="100%" ui:field="huntLink" addStyleNames='{style.center}'>
				see the hunt for this submission
			</g:Hyperlink>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 